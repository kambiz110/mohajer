@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, LazZiya.TagHelpers
@using Mohajer.Useful.Static
@using Mohajer.Entity
@model IEnumerable<Nazarat>
@{

    var counterr = 0;
}

@if (Model != null && Model.Count() > 1)
{

    <div class="container mt-100 mt-60">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="section-title mb-60">
                    <h4 class="title mb-4 aos-init" data-aos="fade-up" data-aos-duration="1000">نظرات کاربران</h4>
                </div>
            </div>
        </div><!--end row-->

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div id="customer-testi" class="owl-carousel owl-theme owl-loaded owl-drag">
                    <div class="owl-stage-outer">
                        <div class="owl-stage" style="transform: translate3d(-1110px, 0px, 0px); transition: all 0.25s ease 0s; width: 4440px;">
                            @for (int i = 0; i < Model.Count(); i++)
                            {

                                <div class="owl-item" style="width: 370px;">
                                    <div class="media customer-testi m-2 aos-init" data-aos="fade-up" data-aos-duration="2200">
                                        <img src="~/Landrick/layouts/images/client/@StaticList.userProfile[counterr]" class="avatar avatar-small mr-3 rounded shadow" alt="">
                                        <div class="media-body content p-3 shadow rounded bg-white position-relative">
                                            <ul class="list-unstyled mb-0">
                                                <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                                <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                                <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                                <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                                <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                            </ul>
                                            <p class="text-muted mt-2">"@Html.Raw(@Model.ElementAt(i).Comment.ToCuteTitleWithCounter(150)) "</p>
                                            <h6 class="text-primary">- @Html.Raw(@Model.ElementAt(i).Name) <small class="text-muted">@Model.ElementAt(i).AtInserted.ToPersianDateStrFarsi()</small></h6>
                                        </div>
                                    </div>
                                </div>
                                counterr++;
                                if (counterr == 9)
                                {
                                    counterr = 0;
                                }
                            }




                        </div>
                    </div>
                    @*<div class="owl-nav disabled">
                        <button type="button" role="presentation" class="owl-prev">
                            <span aria-label="Previous">‹</span>
                        </button>
                        <button type="button" role="presentation" class="owl-next">
                            <span aria-label="Next">›</span>
                        </button>
                    </div>
                    <div class="owl-dots">
                        <button role="button" class="owl-dot">
                            <span></span>
                        </button>
                        <button role="button" class="owl-dot active">
                            <span></span>
                        </button>
                    </div>*@
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div>
}





















