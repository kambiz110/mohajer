@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Mohajer.Useful.Static
@using Mohajer.ViewModel
@model IEnumerable<ProductListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {

    <link href="~/W3/W3.CSS" rel="stylesheet" />
    <!-- DataTables -->
    <link href="~/PersianAdminLTE-master/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/PersianAdminLTE-master/plugins/datatables/jquery.dataTables.css" rel="stylesheet" />
}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title font_W_koodak">@StaticTable.tableProdoctname</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive-sm">
                    <table id="TableProduct" class="table">
                        <thead class="thead-dark">
                            <tr class="center-block" style="text-align:center;" align="center">
                                <th class="w-25 center-block">@Html.DisplayNameFor(m => m.Image)</th>
                                <th class="w-15 center-block">@Html.DisplayNameFor(m => m.Title)</th>
                                <th class="w-35 center-block">@Html.DisplayNameFor(m => m.Description)</th>
                                <th class="w-25 center-block">عملیات</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align: center; vertical-align: middle;" class="">
                                    <td class="">
                                        <img src="@item.Image" class="w3-circle" style="width: 200px;height: 200px;display: inline-block;
">
                                    </td>
                                    <td class="">@item.Title</td>
                                    <td class="">@Html.Raw(item.Description)</td>

                                    <td class="">
                                        @if (item.IsActive)
                                        {
                                        <span class="w3-btn w3-round w3-green">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="w3-btn w3-round w3-red">غیر فعال</span>
                                        }
                                        |
                                    <span class="w3-btn w3-round w3-lime">ویرایش</span>
                                        |
                                    <span class="w3-btn w3-round w3-cyan">حذف</span>
                                    </td>
                                </tr>
                            }



                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts {

    <!-- DataTables -->

    <script src="~/PersianAdminLTE-master/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/PersianAdminLTE-master/plugins/datatables/jquery.dataTables.js"></script>
    TableProduct
    <script>
        $(function () {
            $("#example").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "bPaginate": false,
                "paging": false,
                "searching": false,
            });
        });
    </script>
}
